<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/count_plus"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/max_plus"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/count_plus"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/count_stay"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/count_plus"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/count_minus"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/count_stay"
        android:layout_alignParentStart="true"/>




</RelativeLayout>

