<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/count_plus"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Длинна последовательности"
        android:layout_below="@id/count_plus" />


    <TextView
        android:id="@+id/max_plus"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/count_plus"/>
    <TextView
        android:id="@+id/max_stay"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/count_plus"
        android:layout_toRightOf="@id/max_plus"/>
    <TextView
        android:id="@+id/max_minus"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/count_plus"
        android:layout_toRightOf="@id/max_stay"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Кол-во последовательностей"
        android:layout_below="@id/max_plus" />



    <Button
        android:id="@+id/pressMe"
        android:text="Считать"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/max_plus"
        android:layout_centerInParent="true"
        android:onClick="kliker"/>


    <EditText
        android:id="@+id/inText_plus"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/pressMe"
       android:layout_centerVertical="true"/>


    <EditText
        android:id="@+id/inText_stay"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/pressMe"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/inText_plus"/>


    <EditText
        android:id="@+id/inText_minus"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/pressMe"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/inText_stay"/>



</RelativeLayout>

